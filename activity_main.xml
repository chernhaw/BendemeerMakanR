<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chernhaw.bendemeermakan.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bendemeermarketentrance"
            ></ImageView>

        <Button
            android:id="@+id/kopitiam"
            android:text="Kopitiam (Bendemeer Mall)"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/morekoptiam"
            android:text="More Kopitiam (Blk 34 Whampoa West)"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/market"
            android:text="Market"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/restaurant"
            android:text="Restaurants"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/morerestaurant"
            android:text="More Restaurants (Blk 34 Whampoa West)"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/fastfood"
            android:text="Fastfood"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/nearby"
            android:text="Nearby"
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_gravity="center">

        </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As at 11 Feb 2023"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>